@model IEnumerable<AdminLTE_Application.CRM_Vendedor_Empresa>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<aside class="right-side">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Empresas
            <small>Final de prazo</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Empresas</a></li>
            <li class="active">Final de prazo</li>
        </ol>
        <table id="example3" class="table table-bordered table-hover">
            <thead>
                <tr role="row">
                    <th class="sorting" role="columnheader" tabindex="0" aria-controls="example3" rowspan="1" colspan="1" style="width: 295px;" aria-label="Rendering engine: activate to sort column ascending">Empresa</th>
                    <th class="sorting" role="columnheader" tabindex="0" aria-controls="example3" rowspan="1" colspan="1" style="width: 390px;" aria-label="Platform(s): activate to sort column ascending">Vendedor</th>
                    <th class="sorting_asc" role="columnheader" tabindex="0" aria-controls="example3" rowspan="1" colspan="1" style="width: 253px;" aria-label="Engine version: activate to sort column ascending">Inicio</th>
                    <th class="sorting" role="columnheader" tabindex="0" aria-controls="example3" rowspan="1" colspan="1" style="width: 181px;" aria-label="CSS grade: activate to sort column ascending">Fim</th>
                    <th class="sorting" role="columnheader" tabindex="0" aria-controls="example3" rowspan="1" colspan="1" style="width: 181px;" aria-label="CSS grade: activate to sort column ascending">Data Entrada</th>
                    <th class="sorting" role="columnheader" tabindex="0" aria-controls="example3" rowspan="1" colspan="1" style="width: 181px;" aria-label="CSS grade: activate to sort column ascending">Situação</th>
                    <th class="sorting" role="columnheader" tabindex="0" aria-controls="example3" rowspan="1" colspan="1" style="width: 181px;" aria-label="CSS grade: activate to sort column ascending">Obs</th>
                    <th class="sorting" role="columnheader" tabindex="0" aria-controls="example3" rowspan="1" colspan="1" style="width: 181px;" aria-label="CSS grade: activate to sort column ascending">Ações</th>
                </tr>
            </thead>       
            <tbody role="alert" aria-live="polite" aria-relevant="all">

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CRM_Empresa.Raz_Social)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CRM_Vendedor.Nme_Vendedor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Dta_Inicio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Dta_Fim)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Dta_Cadastro)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CRM_Situacao_Atendimento.Des_Situacao_atendimento)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Des_Obs_VendedorEmpresa)
                        </td>
                        <td>
                            <a href="~/Empresa/Details/@Html.DisplayFor(modelItem => item.Num_CNPJ).ToString().Replace(",00", "").Replace(".00", "")">Detalhes</a>
                        </td>
                    </tr>
                }
            </tbody>
</table>
</section>
    <!-- Main content -->
    <section class="content"></section><!-- /.content -->
</aside><!-- /.right-side -->

@Scripts.Render("~/bundles/datatables")
<script type="text/javascript">
    $(function () {
        $("#example1").dataTable();
        $('#example3').dataTable({
            "bPaginate": true,
            "bLengthChange": false,
            "bFilter": true,
            "bSort": true,
            "bInfo": true,
            "bAutoWidth": true
        });
    });
</script>

<script type="text/javascript">
    $(document).ready(function () {
        $("li").removeClass("active");
        $("#examples").addClass("active");
        $("#examples_menu").css("display", "block");
        $("#examples_empty").addClass("active");
        $("#examples_arrow").addClass("fa-angle-down");
    });
</script>
