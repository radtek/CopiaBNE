<?xml version="1.0" encoding="utf-8"?>

<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <log4net>
    <appender name="RabittMqAppender" type="SharedKernel.Logger.Appenders.RabittMqAppender, SharedKernel.Logger">
      <ApplicationName value="BNE.Services" />
      <Host value="rabbitmq.bne.com.br" />
      <User value="logger" />
      <Password value="l3it3c0mc4qu1" />
      <ExchangeName value="log" />
      <Topic value="Log.MailSender.Service" />
      <VirtualHost value="log" />
    </appender>
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <param name="File" value="log/log" />
      <!--<file value="log.txt" />-->
      <param name="AppendToFile" value="true" />
      <param name="DatePattern" value="-yyyy.MM.dd" />
      <param name="RollingStyle" value="Date" />
      <param name="StaticLogFileName" value="false" />
      <!--<param name="StaticLogFileName" value="true"/>-->
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
      </layout>
    </appender>
    <appender name="ColoredConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
      <mapping>
        <level value="ERROR" />
        <foreColor value="Red, HighIntensity" />
      </mapping>
      <mapping>
        <level value="WARN" />
        <foreColor value="Yellow, HighIntensity" />
      </mapping>
      <mapping>
        <level value="INFO" />
        <foreColor value="White" />
      </mapping>
      <mapping>
        <level value="DEBUG" />
        <foreColor value="Green, HighIntensity" />
      </mapping>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %-2level: %message%newline" />
      </layout>
    </appender>
    <root>
      <level value="INFO" />
      <!--<appender-ref ref="RollingFileAppender" />
      <appender-ref ref="ColoredConsoleAppender" />-->
      <appender-ref ref="RabittMqAppender" />
    </root>
  </log4net>
</configuration>