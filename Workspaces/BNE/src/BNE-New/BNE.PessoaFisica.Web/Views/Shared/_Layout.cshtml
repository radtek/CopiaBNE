@using System.Web.Optimization
@using BNE.PessoaFisica.Web.Helpers
<!doctype html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta property="og:image" content="http://www.bne.com.br/img/logo_facebook.png" />
    @Html.MetaTag(MetatagHelper.MetatagType.MetaData).Render()
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@Html.MetaTag(MetatagHelper.MetatagType.Title).Render()</title>

    <!-- Add to homescreen for Chrome on Android -->
    <meta name="mobile-web-app-capable" content="yes">

    <!-- Add to homescreen for Safari on iOS -->
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-title" content="Material Design Lite">
    <link rel="apple-touch-icon-precomposed" href="apple-touch-icon-precomposed.png">

    <!-- Tile icon for Win8 (144x144 + tile color) -->
    <meta name="msapplication-TileImage" content="images/touch/ms-touch-icon-144x144-precomposed.png">
    <meta name="msapplication-TileColor" content="#3372DF">

    @Styles.Render("~/bundles/css")
    @Styles.Render("~/bundles/cssmaterial")

    <!--Google Fonts-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link href='http://fonts.googleapis.com/css?family=Roboto: 400,700' rel='stylesheet' type='text/css'>

    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.min.css">

    @RenderSection("jsonSchema", required: false)

    <script src="//code.jquery.com/jquery-1.11.3.min.js"></script>
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.min.js"></script>
    <script src="//ajax.microsoft.com/ajax/jquery.validate/1.14.0/jquery.validate.min.js"></script>
    <script src="//ajax.microsoft.com/ajax/jquery.validate/1.14.0/additional-methods.min.js"></script>
    @Scripts.Render("~/bundles/jsmaterial")

    @Scripts.Render("~/bundles/ajax")
    @Scripts.Render("~/bundles/validate")
    @Scripts.Render("~/bundles/scripts/components")
    @Scripts.Render("~/bundles/site")
</head>
<body>
    @RenderPage("_Header.cshtml")
    <div class="container">
       

        @if (ViewBag.ExibirPossoAjudar != null && ViewBag.ExibirPossoAjudar == true)
        {
            <div id="banner-posso-ajudar" class="banner-posso-ajudar">
                <div id="possoajudar-bemvindo">Seja bem vindo!</div>
                <div id="possoajudar-txt">Em que posso lhe ajudar?</div>
                <div id="possoajudar-atendimento">Atendimento VIP</div>
                <div id="possoajudar-status">ONLINE</div>
                <img src="~/Content/img/person.png" id="possoajudar-img">
                <i class="fa fa-commenting fa-2x" aria-hidden="true" id="possoajudar-ico"></i>
            </div>
        }


        @RenderBody()
    </div>
    
    <div id="pnlAviso" class="painel_avisos">
        <div style="position: relative">
            <span id="lblAviso"></span>
            <div class="botao_fechar_aviso">
                <div style="margin-top: 22px;">
                    Fechar <i class="fa fa-times-circle"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="loading">
        <div class="content">

            <div class="mdl-spinner mdl-js-spinner is-active spinner"></div>
        </div>
        <span class="message">Este processo pode levar alguns segundos...</span>
    </div>

    @{ Html.RenderAction("Parametros", "Home");}
    @RenderSection("scripts", required: false)

    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-1937941-6', 'auto');
        ga('send', 'pageview');

    </script>

    <script src="https://use.fontawesome.com/731d28b804.js"></script>

    @Scripts.Render("~/bundles/banner-posso-ajudar")
</body>
</html>