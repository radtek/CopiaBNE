@{ ViewBag.Title = "Cadastro"; }

@if(ViewBag.Out != null) { <script type="text/javascript">swal('@Html.Raw(ViewBag.Out.Title)', '@Html.Raw(ViewBag.Out.Message)', '@ViewBag.Out.Status');</script> }
  
@{
    string NmePessoa = "";
    string Celular = "";
    string Email = "";
    string Profissao = "";
    int Tipo = 1;


    if (ViewBag.Out != null)
    {
        if (ViewBag.Out.Model != null)
        {
            NmePessoa = ViewBag.Out.Model.NmePessoa;
            Celular = ViewBag.Out.Model.Celular;
            Email = ViewBag.Out.Model.Email;
            Profissao = ViewBag.Out.Model.Profissao;
            Tipo = ViewBag.Out.Model.Tipo;
        }
    }
    
}                                                                                                                         

<script src="~/Content/js/cadastro.js"></script>
<div class="mdl-card mdl-shadow--2dp demo-card-wide cadastro-card">
    <div class="mdl-card__title">
        <h2 class="mdl-card__title-text">Cadastro</h2>
    </div>
    <form id="cadastroForm" name="cadastroForm" method="post" action="/Perfil/Salvar">

        <div class="mdl-card__supporting-text lgn-cdt-holder">
            <div class="mdl-textfield mdl-js-textfield">
                <input class="mdl-textfield__input" type="text" id="nome" name="NmePessoa" autocomplete="off" value="@NmePessoa" />
                <label class="mdl-textfield__label" for="nome">Nome*</label>
            </div>

            <div class="mdl-textfield mdl-js-textfield">
                <input class="mdl-textfield__input" type="text" id="celular" name="Celular" autocomplete="off" value="@Celular" />
                <label class="mdl-textfield__label" for="celular">Celular*</label>
            </div>

            <div class="mdl-textfield mdl-js-textfield">
                <input class="mdl-textfield__input" type="text" id="email" name="Email" autocomplete="off"  value="@Email" />
                <label class="mdl-textfield__label" for="email">Email</label>
            </div>

            <div class="mdl-textfield mdl-js-textfield">
                <input class="mdl-textfield__input" type="text" id="profissao" name="Profissao" autocomplete="off" value="@Profissao" />
                <label class="mdl-textfield__label" for="profissao">Profissão*</label>
            </div>

            <div class="mdl-textfield mdl-js-textfield">
                @Html.DropDownList("Tipo", new SelectList(BNE.BLL.TipoUsuarioParceiro.loadObjects(), "Id", "Descricao", Tipo),
                          new { @class = "mdl-textfield__input", @id = "Tipo", @autocomplete = "off" })
            </div>
        </div>

        <div class="mdl-card__actions mdl-card--border">
            
            <a href="/Perfil/Sair" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect  mdl-js-ripple-effect btn-grey"
               style="margin-left: 10px; ">
                Sair
            </a>

            <button type="button" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored  mdl-js-ripple-effect btn-salvar"
                     style="float: right; margin-right: 10px; padding: 0 15px 0 15px">
                Salvar
            </button>

        </div>
    </form>
</div>
