
<div class="row clearfix">
    <div class="col-md-12 column">
        <form class="navbar-form navbar-left" role="search" name="cadastroDisciplina">
            <div class="form-group">

                <input class="form-control largura" type="text" placeholder="NOME DA DISCIPLINA" ng-model="cadastro.disciplina.Nome" required>
            </div> 
            
            <button ng-hide="cadastro.disciplina.Id > 0" ng-disabled="!cadastroDisciplina.$valid" class="btn btn-primary" ng-click="cadastrarDisciplina()">CADASTRAR</button>
            <button ng-show="cadastro.disciplina.Id > 0" ng-disabled="!cadastroDisciplina.$valid" class="btn btn-primary" ng-click="editarDisciplina()">ATUALIZAR</button>
        </form>
    </div>
    <div class="col-md-4 column">
    </div>
</div>
<div class="row clearfix">
    <div class="col-md-12 column">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th> NOME DA DISCIPLINA</th>
                    <th>AÇÕES </th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="disciplina in cadastro.disciplinas_cadastradas | orderBy: 'Nome'">
                    <td>{{disciplina.Nome}}</td>
                    <td class="larguratd">
                        <button class="btn btn-link" ng-click="carregarDisciplina(disciplina.Id);">Editar</button>
                        <button class="btn btn-link" ng-click="apagarDisciplina(disciplina.Id)">Apagar</button>
                    </td>
                </tr>
              
            </tbody>
        </table>
        <button type="submit" class="btn btn-default btn-lg pull-left" ng-click="voltarCadastroALuno()">VOLTAR</button>
        <button type="submit" class="btn btn-warning btn-lg pull-right" ng-click="abrirCadastroAlunoDisciplina()">PRÓXIMO</button>
    </div>
</div>